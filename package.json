  },
  "scripts": {
    "dev": "vite --config vite-dev.config.ts",
    "clean": "rimraf dist",
    "build": "GENERATE_SOURCEMAP=false vite build",
    "build:staging": "tsc && vite build --config vite-staging.config.ts",
    "preview": "vite preview",
    "format": "prettier --write \"**/*.{ts,tsx,md,json,css,scss,html}\"",
    "test": "vitest",
    "lint": "eslint src",
    "flags": "scripts/flags/generate_combined_flags_and_css.sh",
    "svgo": "svgo --multipass src/assets/*.svg",
    "changelogs:validate": "node ./changelogs/validate.js",
    "changelogs:generate": "node ./changelogs/generate.js",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "packageManager": "pnpm@9.14.4+sha512.c8180b3fbe4e4bca02c94234717896b5529740a6cbadf19fa78254270403ea2f27d4e1d46a08a0f56c89b63dc8ebfd3ee53326da720273794e6200fcf0d184ab",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/*",
        "@eslint/*"
      ]
    }
  }
